#!/bin/bash

f=3 b=4
for j in f b; do
  for i in {0..7}; do
    printf -v $j$i %b "\e[${!j}${i}m"
  done
done
bld=$'\e[1m'
rst=$'\e[0m'
inv=$'\e[7m'

cat << EOF
 $bld
 $f1           ____            $f3           ____            $f6           ____            
 $f1          /\   \           $f3          /\   \           $f6          /\   \           
 $f1         /  \   \          $f3         /  \   \          $f6         /  \   \          
 $f1        /    \   \         $f3        /    \   \         $f6        /    \   \         
 $f1       /      \   \        $f3       /      \   \        $f6       /      \   \        
 $f1      /   /\   \   \       $f3      /   /\   \   \       $f6      /   /\   \   \       
 $f1     /   /  \   \   \      $f3     /   /  \   \   \      $f6     /   /  \   \   \      
 $f1    /   /    \   \   \     $f3    /   /    \   \   \     $f6    /   /    \   \   \     
 $f1   /   /    / \   \   \    $f3   /   /    / \   \   \    $f6   /   /    / \   \   \    
 $f1  /   /    /   \   \   \   $f3  /   /    /   \   \   \   $f6  /   /    /   \   \   \   
 $f1 /   /    /---------'   \  $f3 /   /    /---------'   \  $f6 /   /    /---------'   \  
 $f1/   /    /_______________\ $f3/   /    /_______________\ $f6/   /    /_______________\ 
 $f1\  /                     / $f3\  /                     / $f6\  /                     / 
 $f1 \/_____________________/  $f3 \/_____________________/  $f6 \/_____________________/  
 $rst                        
EOF
